html {
    font-size: 14px;
}

@media (min-width: 768px) {
    html {
        font-size: 16px;
    }
}
body {
    display: flex;
    background: linear-gradient(90deg, lightBlue, black);
}

.btn:focus, .btn:active:focus, .btn-link.nav-link:focus, .form-control:focus, .form-check-input:focus {
    box-shadow: 0 0 0 0.1rem white, 0 0 0 0.25rem #258cfb;
}

html { 
    position: relative;
    min-height: 100%;
}

body {
    margin-bottom: 60px;
}

.form-floating > .form-control-plaintext::placeholder, .form-floating > .form-control::placeholder {
    color: var(--bs-secondary-color);
    text-align: end;
}

.form-floating > .form-control-plaintext:focus::placeholder, .form-floating > .form-control:focus::placeholder {
    text-align: start;
}
/* Box shadow style */
.box-shadow {
    box-shadow: 0 2.5rem 2.5rem rgba(0, 0, 0, 0.1);
}

/* Button primary style */
button.accent-primary {
    text-transform: uppercase;
    font-weight: inherit;
}

/* Sticky footer styles */

html, body {
    height: 100%;
    margin: 0;
    padding: 0;
}

body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
}

.main-content {
    flex: 1;
}

footer {
     /* darker gradient for visibility */
    color: lightgrey;
    text-align: center;
    line-height: 2.5rem; /* controls height/spacing without padding */
    margin-top: auto;
    font-size: 14px;
}

    footer a {
        color: #4ea8ff;
        text-decoration: none;
        margin-left: 4px;
    }

        footer a:hover {
            text-decoration: underline;
        }


/* Loader Styles */
.loader {
    width: 80px;
    height: 80px;
    border-top: 10px solid #f3f3f3; /* Light grey */
    border-right: 10px solid #3498db; /* Blue */
    border-radius: 50%;
    margin: 30px auto;
    background-color: rgba(128, 128, 128, 0.2);
    animation: spin 2s linear infinite;
    z-index: 2147483647;
    left: 45%;
}

.open-sans-<uniquifier > {
    font-family: "Open Sans", sans-serif;
    font-optical-sizing: auto;
    font-weight: <weight>;
    font-style: normal;
    font-variation-settings: "wdth" 100;
}

.roboto-<uniquifier > {
    font-family: "Roboto", sans-serif;
    font-optical-sizing: auto;
    font-weight: <weight>;
    font-style: normal;
    font-variation-settings: "wdth" 100;
}

/* Loader animation */
@keyframes spin {
    from {
        transform: rotate(0deg);
    }

    to {
        transform: rotate(360deg);
    }
}

/* Hide element */
.hide {
    display: none;
}

/* Auth buttons in navbar (small login link + bold signup button) */
.navbar-auth {
    display: flex;
    gap: 12px;
    align-items: center;
}
.btn-login {
  display: inline-block;
    background: #111;
    color: #fff;
    padding: 8px 18px;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 600;
    box-shadow: 0 6px 0 rgba(0, 0, 0, 0.15);
}
.btn-login:hover {
    text-decoration: underline;
}

/* Auth page image */
.img-auth {
    max-width: 100%;
    height: auto;
    display: block;
    border-radius: 8px;
}
.btn-signup {
    display: inline-block;
    background: #111;
    color: #fff;
    padding: 8px 18px;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 600;
    box-shadow: 0 6px 0 rgba(0,0,0,0.15);
}
.btn-signup:hover {
    opacity: 0.95;
}

/* Model tabs / pill-style nav for authenticated users */
/* Navbar styling */
.custom-navbar {
    background: linear-gradient(90deg, lightBlue, black);
    padding: 0.3rem 1.2rem;
    box-shadow: 0px 4px 12px rgba(0,0,0,0.1);
}

    .custom-navbar .navbar-brand {
        font-size: 1.4rem;
        letter-spacing: 1px;
        transition: color 0.3s ease;
    }

        .custom-navbar .navbar-brand:hover {
            color: #ffc107 !important;
        }

    .custom-navbar .nav-link {
        color: #f8f9fa !important;
        font-weight: 500;
        margin: 0 0.6rem;
        transition: all 0.3s ease;
        border-radius: 8px;
        padding: 0.5rem 0.9rem;
    }

        .custom-navbar .nav-link:hover {
            background: rgba(255, 255, 255, 0.15);
            color: #ffc107 !important;
        }

    .custom-navbar .dropdown-menu {
        border-radius: 0.75rem;
        box-shadow: 0px 6px 18px rgba(0,0,0,0.15);
    }

/* Toggler button (mobile) */
.custom-toggler {
    border: none;
}

    .custom-toggler .navbar-toggler-icon {
        background-image: url("data:image/svg+xml;charset=utf8,%3Csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='rgba%28255,255,255,1%29' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 7h22M4 15h22M4 23h22'/%3E%3C/svg%3E");
    }

/* -----------------------
   Login form — container1
   ----------------------- */

    /* card */
    .container1 form {
        width: 100%;
        max-width: 420px;
        background: #ffffff;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 8px 30px rgba(20, 30, 40, 0.06);
        border: 1px solid rgba(15, 23, 42, 0.04);
    }

        /* subtle hr — make it neat */
        .container1 form > hr {
            border: 0;
            height: 1px;
            background: linear-gradient(90deg, rgba(0,0,0,0.04), rgba(0,0,0,0));
            margin: 0 0 0.75rem 0;
        }

    /* title */
    .container1 h1 {
        font-size: 1.25rem;
        margin: 0 0 1rem 0;
        color: #0f172a;
        font-weight: 600;
        letter-spacing: -0.2px;
    }

    /* floating form spacing */
    .container1 .form-floating {
        position: relative;
        margin-bottom: 0.85rem;
    }

    /* inputs */
    .container1 .form-control {
        width: 100%;
        height: 44px;
        padding: 0.625rem 0.75rem;
        font-size: 0.95rem;
        border-radius: 8px;
        border: 1px solid #e5e7eb;
        background: #fff;
        transition: border-color 0.18s ease, box-shadow 0.18s ease, transform 0.06s;
        box-shadow: none;
    }

    /* make floating labels comfortable */
    .container1 .form-floating .form-label {
        position: absolute;
        top: 10px;
        left: 12px;
        padding: 0 4px;
        font-size: 0.9rem;
        color: #6b7280;
        pointer-events: none;
        transition: transform 0.12s ease, font-size 0.12s ease, top 0.12s ease;
        background: transparent;
    }

    /* when input has value or focused, push label up (works with bootstrap's floating) */
    .container1 .form-control:focus + .form-label,
    .container1 .form-control:not(:placeholder-shown) + .form-label {
        transform: translateY(-12px);
        font-size: 0.78rem;
        color: #374151;
        top: 2px;
    }

    /* focus state */
    .container1 .form-control:focus {
        border-color: #2563eb;
        box-shadow: 0 6px 18px rgba(37,99,235,0.06);
        outline: none;
    }

    /* validation text */
    .container1 .text-danger,
    .container1 span.field-validation-error {
        color: #dc2626;
        font-size: 0.86rem;
        margin-top: 0.35rem;
        display: block;
    }

    /* checkbox line */
    .container1 .mb-3 input[type="checkbox"] {
        margin-right: 0.5rem;
        width: 16px;
        height: 16px;
        vertical-align: middle;
    }

    /* remember me (bootstrap uses .form-check classes) */
    .container1 .checkbox {
        margin-bottom: 0.8rem;
    }

        .container1 .checkbox label {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.95rem;
            color: #374151;
        }

    /* primary button */
    .container1 .btn-primary,
    .container1 button[type="submit"] {
        display: inline-block;
        width: 100%;
        padding: 0.65rem 1rem;
        font-size: 0.98rem;
        font-weight: 600;
        border-radius: 10px;
        border: none;
        cursor: pointer;
        background: linear-gradient(180deg,#2563eb,#1e4fd6);
        color: #fff;
        box-shadow: 0 8px 24px rgba(37,99,235,0.12);
        transition: transform 0.08s ease, box-shadow 0.12s ease, opacity 0.12s ease;
    }

        .container1 .btn-primary:active {
            transform: translateY(1px);
        }

        .container1 .btn-primary:focus {
            outline: none;
            box-shadow: 0 10px 30px rgba(37,99,235,0.18);
        }

    /* links */
    .container1 a {
        color: #2563eb;
        text-decoration: none;
        font-size: 0.92rem;
    }

        .container1 a:hover {
            text-decoration: underline;
        }

    /* small helper text spacing */
    .container1 form > div + div {
        margin-top: 0.6rem;
    }

/* responsive tweaks */
@media (max-width: 480px) {
    .container1 form {
        padding: 1.25rem;
        border-radius: 10px;
    }

    .container1 h1 {
        font-size: 1.1rem;
    }

    .container1 .form-control {
        height: 42px;
        font-size: 0.95rem;
    }
}



