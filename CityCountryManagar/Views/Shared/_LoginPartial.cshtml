@using Microsoft.AspNetCore.Identity
@using RidersApp.Areas.Identity.Data

@inject SignInManager<RidersAppUser> SignInManager
@inject UserManager<RidersAppUser> UserManager

<div class="navbar-auth">
@if (SignInManager.IsSignedIn(User))
{
    <a id="manage" class="btn-login" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    <form id="logoutForm" class="d-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <button id="logout" type="submit" class="btn-login">Logout</button>
    </form>
}
else
{
    <a id="login" class="btn-login" asp-area="Identity" asp-page="/Account/Login">‹ LOGIN ‹</a>
    <a id="register" class="btn-signup" asp-area="Identity" asp-page="/Account/Register">SIGN UP</a>
}
</div>
