@using Microsoft.AspNetCore.Identity
@using RidersApp.Areas.Identity.Data

@inject SignInManager<RidersAppUser> SignInManager
@inject UserManager<RidersAppUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Riders App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/navbar.css" asp-append-version="true" /> <!-- New CSS -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="//cdn.datatables.net/2.3.3/css/dataTables.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        body {
            font-family: 'Inter', system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue', Arial;
        }

        table.dataTable thead th {
            background: #f8f9fa;
        }

        table.dataTable {
            width: 100% !important;
        }

        /* User Profile Dropdown Styles */
        .user-profile-dropdown {
            display: flex;
            align-items: center;
            text-decoration: none !important;
            color: white !important;
            padding: 0.5rem 1rem;
            border-radius: 50px;
            transition: background-color 0.2s ease;
        }

        .user-profile-dropdown:hover {
            background-color: rgba(255, 255, 255, 0.1);
            color: white !important;
        }

        .user-name {
            font-weight: 500;
            margin-left: 0.5rem;
        }

        .user-dropdown {
            min-width: 280px;
            border-radius: 10px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
            border: none;
            padding: 0.5rem 0;
        }

        .user-dropdown .dropdown-header {
            padding: 1rem;
            background-color: #f8f9fa;
            border-bottom: 1px solid #dee2e6;
            margin-bottom: 0.5rem;
        }

        .user-info {
            display: flex;
            align-items: center;
        }

        .user-dropdown .dropdown-item {
            padding: 0.75rem 1rem;
            display: flex;
            align-items: center;
            transition: background-color 0.2s ease;
        }

        .user-dropdown .dropdown-item:hover {
            background-color: #f8f9fa;
        }

        .user-dropdown .dropdown-item i {
            width: 20px;
            text-align: center;
        }

        .user-dropdown .dropdown-item.text-danger:hover {
            background-color: #f8d7da;
            color: #721c24 !important;
        }

        /* User Profile Image Styles */
        .user-profile-image,
        .user-profile-image-large {
            object-fit: cover;
            border: 2px solid rgba(255, 255, 255, 0.2);
            background-color: #007bff;
        }

        .user-profile-image {
            width: 32px !important;
            height: 32px !important;
        }

        .user-profile-image-large {
            width: 40px !important;
            height: 40px !important;
        }

        /* Email text styling */
        .user-info .text-muted {
            font-size: 0.85rem;
            opacity: 0.8;
        }
    </style>
</head>
<body>
    <header>
        @* ✅ Hide navbar on Login and Register pages *@
        @if (!(Context.Request.Path.Value.Contains("/Account/Login")
                || Context.Request.Path.Value.Contains("/Account/Register")))
        {
            <nav class="navbar navbar-expand-lg custom-navbar">
                <div class="container-fluid">
                    <a class="navbar-brand fw-bold text-light" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-bicycle"></i> Riders App
                    </a>
                    <button class="navbar-toggler custom-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarNav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <ul class="navbar-nav ms-auto">
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                                </li>
                                
                                @* Admin users can see all menu items *@
                                @if (User.IsInRole("Admin"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Cities" asp-action="Index">Cities</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Countries" asp-action="Index">Countries</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Employees" asp-action="Index">Employees</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="DailyRides" asp-action="Index">Daily Rides</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Configurations" asp-action="Index">Configurations</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-controller="Users" asp-action="Index">Users</a>
                                    </li>
                                }
                                @* Regular users can only see specific menu items *@
                                else if (User.IsInRole("User"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="DailyRides" asp-action="Index">Daily Rides</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Configurations" asp-action="Index">Configurations</a>
                                    </li>
                                }
                                
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle user-profile-dropdown" href="#" id="userProfileDropdown" role="button"
                                       data-bs-toggle="dropdown" aria-expanded="false">
                                        <img src="~/Image/download.png" 
                                             alt="Profile" class="rounded-circle me-2 user-profile-image" width="32" height="32"
                                             onerror="this.src='data:image/svg+xml;base64,';">
                                        <span class="user-name">@UserManager.GetUserName(User)</span>
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end user-dropdown" aria-labelledby="userProfileDropdown">
                                        <li class="dropdown-header">
                                            <div class="user-info">
                                                <img src="~/Image/download.png" 
                                                     alt="Profile" class="rounded-circle me-2 user-profile-image-large" width="40" height="40"
                                                     onerror="this.src='data:image/svg+xml;base64,';">
                                                <div>
                                                    <div class="fw-bold">@UserManager.GetUserName(User)</div>
                                                    <div class="text-muted small">@User.Identity.Name</div>
                                                </div>
                                            </div>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        
                                        @if (User.IsInRole("User"))
                                        {
                                            <li>
                                                <a class="dropdown-item" href="#" onclick="showInPopup('@Url.Action("ChangePassword", "Users")', 'Change Password'); return false;">
                                                    <i class="fas fa-key me-2"></i> Change Password
                                                </a>
                                            </li>
                                            <li><hr class="dropdown-divider"></li>
                                        }
                                        
                                        <li>
                                            <a class="dropdown-item" href="mailto:@User.Identity.Name">
                                                <i class="fas fa-envelope me-2"></i> Email
                                            </a>
                                        </li>
                                        <li>
                                            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" class="d-inline w-100">
                                                <button type="submit" class="dropdown-item text-danger">
                                                    <i class="fas fa-sign-out-alt me-2"></i> Logout
                                                </button>
                                            </form>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        }
                        else
                        {
                            <ul class="navbar-nav ms-auto">
                                <li class="nav-item">
                                    <partial name="_LoginPartial" />
                                </li>
                            </ul>
                        }
                    </div>
                </div>
            </nav>
        }
    </header>

    <div class="container my-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <p>© 2025 - Riders App | <a href="/Home/Privacy">Privacy Policy</a></p>
    </footer>

    <!-- Modal for Add/Edit forms -->
    <div class="modal fade" id="form-modal" tabindex="-1" role="dialog" aria-labelledby="formModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"> </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body"></div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script>
        // Per-page views initialize DataTables as needed (client or server side)
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
