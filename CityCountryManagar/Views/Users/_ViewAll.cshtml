@model List<RidersApp.ViewModels.UserVM>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Email</th>
            <th>User Name</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Role</th>
            <th>Status</th>
            <th style="width:200px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.UserName</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>
                    <span class="badge" style="background-color: black; color: white;">
                        @user.Role
                    </span>
                </td>
                <td>
                    @if (user.IsLocked)
                    {
                        <span class="badge" style="background-color: black; color: white;">Locked</span>
                    }
                    else if (user.EmailConfirmed)
                    {
                        <span class="badge" style="background-color: black; color: white;">Active</span>
                    }
                    else
                    {
                        <span class="badge" style="background-color: black; color: white;">Pending</span>
                    }
                </td>
                <td>
                    <a class="btn btn-primary btn-sm text-white" onclick="showInPopup('@Url.Action("AddOrEdit", "Users")?id=@user.Id', 'Edit User')">Edit</a>
                    <a class="btn btn-danger btn-sm" onclick="deleteRecord('Users', '@user.Id')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
