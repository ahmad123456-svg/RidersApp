@model List<RidersApp.ViewModels.UserVM>

<table class="table table-dark table-striped table-hover">
    <thead>
        <tr>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Role</th>
            <th>Status</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>
                    <span class="badge badge-status">
                        @user.Role
                    </span>
                </td>
                <td>
                    @if (user.IsLocked)
                    {
                        <span class="badge badge-status">Locked</span>
                    }
                    else if (user.EmailConfirmed)
                    {
                        <span class="badge badge-status">Active</span>
                    }
                    else
                    {
                        <span class="badge badge-status">Pending</span>
                    }
                </td>
                <td class="text-center">
                    <div class="btn-action-container">
                        <a onclick="showInPopup('@Url.Action("AddOrEdit", "Users")?id=@user.Id', 'Edit User')" 
                           class="btn-action-edit" title="Edit User">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a onclick="showInPopup('@Url.Action("UpdatePassword", "Users")?id=@user.Id', 'Update Password')"
                           class="btn-action-warning" title="Update Password">
                            <i class="fas fa-key"></i> Update Password
                        </a>
                        <a onclick="deleteRecord('Users', '@user.Id')"
                           class="btn-action-delete" title="Delete User">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
