@using RidersApp.ViewModels
@model IEnumerable<EmployeeVM>

<table id="employeesTable" class="table table-dark table-striped table-hover datatable">
    <thead>
        <tr>
            <th>Picture</th>
            <th>Name</th>
            <th>Father Name</th>
            <th>Phone No</th>
            <th>Address</th>
            <th>Country</th>
            <th>City</th>
            <th>Salary</th>
            <th>Vehicle</th>
            <th>Vehicle Number</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(item.PictureUrl) && !item.PictureUrl.Contains("default-profile.png") && !item.PictureUrl.Contains("/images/"))
                    {
                        <img src="@item.PictureUrl" alt="@item.Name" width="80" height="80" style="border-radius: 8px; object-fit: cover;" class="employee-profile-img" />
                    }
                    else
                    {
                        <div class="no-picture-placeholder" style="width: 80px; height: 80px; border-radius: 8px; background-color: #f8f9fa; display: flex; align-items: center; justify-content: center; border: 2px dashed #ddd;">
                            <i class="fas fa-user text-muted"></i>
                        </div>
                    }
                </td>
                <td>@item.Name</td>
                <td>@item.FatherName</td>
                <td>@item.PhoneNo</td>
                <td>@item.Address</td>
                <td>@item.CountryName</td>
                <td>@item.CityName</td>
                <td>@item.Salary</td>
                <td>@item.Vehicle</td>
                <td>@item.VehicleNumber</td>
                <td>
                    <div class="btn-group-modern">
                        <a onclick="showInPopup('@Url.Action("AddOrEdit", "Employees", new { id = item.EmployeeId })', 'Edit Employee')" 
                           class="btn-modern-edit" title="Edit Employee">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a onclick="deleteRecord('Employees', @item.EmployeeId)" 
                           class="btn-modern-delete" title="Delete Employee">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .employee-profile-img {
        width: 50px;
        height: 50px;
        object-fit: cover;
        border-radius: 50%;
        border: 2px solid #ccc;
    }
</style>
