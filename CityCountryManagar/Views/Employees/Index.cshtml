@using RidersApp.ViewModels

@{
    ViewData["Title"] = "Employees";
}

    <div class="d-flex justify-content-between align-items-center mb-2">
        <h4 class="mb-0">Employees</h4>
        <div>
            <button class="btn btn-crud-success" onclick="showInPopup('@Url.Action("AddOrEdit", "Employees")', 'Add Employee')">
                <i class="fas fa-plus"></i> Add New
            </button>
        </div>
    </div>
    <div id="view-all">
        <div class="table-responsive">
            <table id="employeesTable" class="table table-dark table-striped table-hover datatable">
                <thead>
                    <tr>
                        <th class="table-column-xs">Picture</th>
                        <th class="table-column-md">Name</th>
                        <th class="table-column-md">Father Name</th>
                        <th class="table-column-lg">Phone No</th>
                        <th class="table-column-lg">Address</th>
                        <th class="table-column-sm">Country</th>
                        <th class="table-column-sm">City</th>
                        <th class="table-column-md">Salary</th>
                        <th class="table-column-xs">Vehicle</th>
                        <th class="table-column-sm">Vehicle Number</th>
                        <th class="table-column-xl">Actions</th>
                    </tr>
                </thead>
            <tbody></tbody>
        </table>
        </div>
    </div>
</div>

@* Add anti-forgery token for AJAX requests *@
@Html.AntiForgeryToken()

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize DataTable with server-side processing
            $('#employeesTable').DataTable({
                processing: true,
                serverSide: true,
                language: {
                    processing: "Please wait...",
                    search: "Search:",
                    paginate: { previous: "Previous", next: "Next" }
                },
                ajax: {
                    url: '@Url.Action("GetEmployeesData", "Employees")',
                    type: 'POST'
                },
                columns: [
                    { 
                        data: 'picture',
                        width: '80px',
                        orderable: false,
                        searchable: false,
                        render: function (data, type, row) {
                            var imageUrl = data && data !== '' ? data : '/Image/download.png';
                            return `<img src="${imageUrl}" alt="Employee" class="img-profile-sm" />`;
                        }
                    },
                    { data: 'name', width: '120px' },
                    { data: 'fatherName', width: '120px' },
                    { data: 'phoneNo', width: '130px' },
                    { data: 'address', width: '150px' },
                    { data: 'countryName', width: '100px' },
                    { data: 'cityName', width: '100px' },
                    { data: 'salary', width: '120px' },
                    { data: 'vehicle', width: '80px' },
                    { data: 'vehicleNumber', width: '100px' },
                    {
                        data: 'employeeId',
                        width: '160px',
                        orderable: false,
                        searchable: false,
                        render: function (data, type, row) {
                            return `
                                <div class="btn-group-modern" role="group">
                                    <button class="btn btn-action-edit" onclick="showInPopup('@Url.Action("AddOrEdit", "Employees")?id=${data}', 'Edit Employee')" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="btn btn-action-delete" onclick="deleteRecord('Employees', ${data})" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            `;
                        }
                    }
                ],
                responsive: true,
                scrollX: true,
                autoWidth: false,
                paging: true,
                pageLength: 25,
                lengthChange: true,
                searching: true,
                ordering: true,
                info: true,
                autoWidth: false,
                order: []
            });
        });
    </script>
}
