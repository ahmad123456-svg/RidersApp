@using RidersApp.ViewModels

@{
    ViewData["Title"] = "Employees";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h4>
                Employees
                <button class="btn btn-success float-end" onclick="showInPopup('@Url.Action("AddOrEdit", "Employees")', 'Add Employee')">Add New</button>
            </h4>
        </div>
        <div class="card-body" id="view-all">
            @await Html.PartialAsync("_ViewAll", new List<EmployeeVM>())
        </div>
    </div>
</div>

@* Add anti-forgery token for AJAX requests *@
@Html.AntiForgeryToken()

@section Scripts {
    <script>
        $(document).ready(function() {
            // Load employees on page load
            $.get('@Url.Action("GetEmployees", "Employees")', function(data) {
                $("#view-all").html(data);
            });
        });
    </script>
}
