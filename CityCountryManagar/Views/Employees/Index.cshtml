@using RidersApp.ViewModels

@{
    ViewData["Title"] = "Employees";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <h4 class="mb-0">Employees</h4>
        <div>
            <button class="btn btn-success" onclick="showInPopup('@Url.Action("AddOrEdit", "Employees")', 'Add Employee')">Add New</button>
        </div>
    </div>
    <div id="view-all">
        @await Html.PartialAsync("_ViewAll", new List<EmployeeVM>())
    </div>
</div>

@* Add anti-forgery token for AJAX requests *@
@Html.AntiForgeryToken()

@section Scripts {
    <script>
        $(document).ready(function() {
            // Load employees on page load
            $.get('@Url.Action("GetEmployees", "Employees")', function(data) {
                $("#view-all").html(data);
            });
        });
    </script>
}
