@using RidersApp.ViewModels
@{
    ViewData["Title"] = "Countries";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h4>
                Countries
                <button class="btn btn-success float-end"
                        onclick="showInPopup('@Url.Action("AddOrEdit", "Countries")', 'Add Country')">
                    Add New
                </button>
            </h4>
        </div>
        <div class="card-body" id="view-all">
            @Html.Partial("_ViewAll", new List<CountryVM>())
        </div>
    </div>
</div>

@* Add anti-forgery token for AJAX requests *@
@Html.AntiForgeryToken()

@section Scripts {
    <script>
        $(document).ready(function() {
            // Load countries on page load
            $.get('@Url.Action("GetCountries", "Countries")', function(data) {
                $("#view-all").html(data);
            });
        });
    </script>
}
