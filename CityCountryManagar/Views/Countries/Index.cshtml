@using RidersApp.ViewModels
@{
    ViewData["Title"] = "Countries";
}

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <h4 class="mb-0">Countries</h4>
            <div>
                <button class="btn btn-success" onclick="showInPopup('@Url.Action("AddOrEdit", "Countries")', 'Add Country')">Add New</button>
            </div>
        </div>
        <div id="view-all">
            @Html.Partial("_ViewAll", new List<CountryVM>())
        </div>
    </div>

@* Add anti-forgery token for AJAX requests *@
@Html.AntiForgeryToken()

@section Scripts {
    <script>
        $(document).ready(function() {
            // Load countries on page load
            $.get('@Url.Action("GetCountries", "Countries")', function(data) {
                $("#view-all").html(data);
            });
        });
    </script>
}
