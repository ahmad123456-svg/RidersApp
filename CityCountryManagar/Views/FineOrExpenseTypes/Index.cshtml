@model RidersApp.ViewModels.FineOrExpenseTypeVM
@{
    ViewData["Title"] = "Fine/Expense Types";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <h4 class="mb-0"><i class="fas fa-tags text-secondary me-2"></i>Fine/Expense Types</h4>
        <div>
            <button class="btn btn-crud-success" onclick="showInPopup('@Url.Action("AddOrEdit", "FineOrExpenseTypes")', 'Add Fine/Expense Type')">
                <i class="fas fa-plus"></i> Add New
            </button>
        </div>
    </div>

    <div id="view-all">
        <table id="fineOrExpenseTypesTable" class="table table-dark table-striped table-hover datatable">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

@Html.AntiForgeryToken()

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#fineOrExpenseTypesTable').DataTable({
                processing: true,
                serverSide: true,
                language: {
                    processing: "Please wait...",
                    search: "Search:",
                    paginate: { previous: "Previous", next: "Next" }
                },
                ajax: {
                    url: '@Url.Action("GetFineOrExpenseTypesData", "FineOrExpenseTypes")',
                    type: 'POST'
                },
                columns: [
                    { data: 'name' },
                    {
                        data: 'id',
                        orderable: false,
                        searchable: false,
                        render: function (data, type, row) {
                            return `
                                <div class="btn-group-modern" role="group">
                                    <button class="btn btn-action-edit" onclick="showInPopup('@Url.Action("AddOrEdit", "FineOrExpenseTypes")?id=${data}', 'Edit Fine/Expense Type')" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="btn btn-action-delete" onclick="deleteRecord('FineOrExpenseTypes', ${data})" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            `;
                        }
                    }
                ],
                paging: true,
                pageLength: 25,
                lengthChange: true,
                searching: true,
                ordering: true,
                info: true,
                autoWidth: false,
                order: [[0, "asc"]]
            });
        });

        window.reloadFineOrExpenseTypesTable = function() {
            $('#fineOrExpenseTypesTable').DataTable().ajax.reload();
            return true;
        };

        window.reloadActiveDataTable = function() {
            if (window.reloadFineOrExpenseTypesTable) {
                return window.reloadFineOrExpenseTypesTable();
            }
            return false;
        };
    </script>
}