@using RidersApp.ViewModels
@model IEnumerable<CityVM>
@{
    ViewData["Title"] = "Cities";
}

<div class="container mt-4">
    @* Display messages *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-2">
        <h4 class="mb-0">Cities</h4>
        <div>
            <button class="btn btn-success" onclick="showInPopup('@Url.Action("AddOrEdit", "Cities")', 'Add City')">Add New City</button>
        </div>
    </div>

    <div id="view-all">
        <table id="citiesTable" class="table table-striped table-hover datatable">
            <thead>
                <tr>
                    <th>City Name</th>
                    <th>Postal Code</th>
                    <th>Country</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

@Html.AntiForgeryToken()

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize DataTable with server-side processing
            $('#citiesTable').DataTable({
                processing: true,
                serverSide: true,
                language: {
                    processing: "Please wait...",
                    search: "Search:",
                    paginate: { previous: "Previous", next: "Next" }
                },
                ajax: {
                    url: '@Url.Action("GetCitiesData", "Cities")',
                    type: 'POST'
                },
                columns: [
                    { data: 'cityName' },
                    { data: 'postalCode' },
                    { data: 'countryName' },
                    {
                        data: 'cityId',
                        orderable: false,
                        searchable: false,
                        render: function (data, type, row) {
                            return `
                                <a class="btn btn-primary btn-sm text-white" onclick="showInPopup('@Url.Action("AddOrEdit", "Cities")?id=${data}', 'Edit City')">Edit</a>
                                <a class="btn btn-danger btn-sm" onclick="deleteRecord('Cities', ${data})">Delete</a>
                            `;
                        }
                    }
                ],
                paging: true,
                pageLength: 25,
                lengthChange: true,
                searching: true,
                ordering: true,
                info: true,
                autoWidth: false,
                order: []
            });
        });
    </script>
}
