@using RidersApp.ViewModels
@model IEnumerable<CityVM>
@{
    ViewData["Title"] = "Cities";
}

<div class="container mt-4">
    @* Display messages *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-2">
        <h4 class="mb-0"><i class="fas fa-city text-info me-2"></i>Cities</h4>
        <div>
            <button class="btn btn-crud-success" onclick="showInPopup('@Url.Action("AddOrEdit", "Cities")', 'Add City')">
                <i class="fas fa-plus"></i><span>➕</span> Add New City
            </button>
        </div>
    </div>

    <div id="view-all">
        <div class="table-responsive">
            <table id="citiesTable" class="table table-dark table-striped table-hover datatable">
                <thead>
                    <tr>
                        <th class="city-name-column">City Name</th>
                        <th class="postal-code-column">Postal Code</th>
                        <th class="country-column">Country</th>
                        <th class="actions-column">Actions</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

@Html.AntiForgeryToken()

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize DataTable with server-side processing
            $('#citiesTable').DataTable({
                processing: true,
                serverSide: true,
                language: {
                    processing: "Please wait...",
                    search: "Search:",
                    paginate: { previous: "Previous", next: "Next" }
                },
                ajax: {
                    url: '@Url.Action("GetCitiesData", "Cities")',
                    type: 'POST'
                },
                columns: [
                    { data: 'cityName' },
                    { data: 'postalCode' },
                    { data: 'countryName' },
                    {
                        data: 'cityId',
                        orderable: false,
                        searchable: false,
                        render: function (data, type, row) {
                            return `
                                <div class="btn-group-modern" role="group">
                                    <button class="btn btn-action-edit" onclick="showInPopup('@Url.Action("AddOrEdit", "Cities")?id=${data}', 'Edit City')" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="btn btn-action-delete" onclick="deleteRecord('Cities', ${data})" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            `;
                        }
                    }
                ],
                paging: true,
                pageLength: 25,
                lengthChange: true,
                searching: true,
                ordering: true,
                info: true,
                autoWidth: false,
                order: []
            });
        });
    </script>
}
