@model List<RidersApp.ViewModels.FineOrExpenseVM>

<table class="table table-dark table-striped table-hover">
    <thead>
        <tr>
            <th>Employee</th>
            <th>Type</th>
            <th>Amount</th>
            <th>Description</th>
            <th>Entry Date</th>
            <th class="actions-column">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EmployeeName</td>
                <td>@item.FineOrExpenseTypeName</td>
                <td>$@item.Amount.ToString("F2")</td>
                <td>@item.Description</td>
                <td>@item.EntryDate.ToString("MM/dd/yyyy HH:mm")</td>
                <td>
                    <div class="btn-action-container">
                        <a onclick="showInPopup('@Url.Action("AddOrEdit", "FineOrExpenses")?id=@item.Id', 'Edit Fine/Expense')" 
                           class="btn-action-edit" title="Edit Fine/Expense">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a onclick="deleteRecord('FineOrExpenses', @item.Id)" 
                           class="btn-action-delete" title="Delete Fine/Expense">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="text-center py-4">
        <h5 class="text-muted">No Fine/Expenses found</h5>
        <p class="text-muted">Click "Add New" to create your first Fine/Expense.</p>
    </div>
}