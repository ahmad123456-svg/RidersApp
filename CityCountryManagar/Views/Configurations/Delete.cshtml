@model RidersApp.ViewModels.ConfigurationVM

@{
    ViewData["Title"] = "Delete Configuration";
}

<h2>Delete Configuration</h2>

<h4>Are you sure you want to delete this?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">Key</dt>
        <dd class="col-sm-10">@Model.KeyName</dd>
        <dt class="col-sm-2">Value</dt>
        <dd class="col-sm-10">@Model.Value</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ConfigurationId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
