@using RidersApp.ViewModels
@{
    ViewData["Title"] = "Configurations";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <h4 class="mb-0">Configurations</h4>
        <div>
            <button class="btn btn-success" onclick="showInPopup('@Url.Action("AddOrEdit", "Configurations")', 'Add Configuration')">Add New</button>
        </div>
    </div>
    <div id="view-all">
        @Html.Partial("_ViewAll", new List<ConfigurationVM>())
    </div>
</div>

@Html.AntiForgeryToken()

@section Scripts {
    <script>
        $(document).ready(function() {
            $.get('@Url.Action("GetConfigurations", "Configurations")', function(data) {
                $("#view-all").html(data);
            });
        });
    </script>
}
@* The Index view uses AJAX to load the _ViewAll partial; the older scaffolded table was removed to avoid duplicate content. *@
