@using RidersApp.ViewModels
@model ConfigurationVM

@{
    ViewData["Title"] = Model.ConfigurationId == 0 ? "Add New Configuration" : "Edit Configuration";
}

<div class="container mt-4">
    <h4>@ViewData["Title"]</h4>
    
    <form asp-action="AddOrEdit" asp-controller="Configurations" method="post" class="mt-3">
        <input type="hidden" asp-for="ConfigurationId" />
    
        <div class="form-group mb-3">
            <label asp-for="KeyName" class="control-label"></label>
            @if (Model != null && Model.ConfigurationId > 0)
            {
                <input asp-for="KeyName" class="form-control" readonly />
            }
            else
            {
                <input asp-for="KeyName" class="form-control" />
            }
            <span asp-validation-for="KeyName" class="text-danger"></span>
        </div>
    
        <div class="form-group mb-3">
            <label asp-for="Value" class="control-label"></label>
            <textarea asp-for="Value" class="form-control"></textarea>
            <span asp-validation-for="Value" class="text-danger"></span>
        </div>
    
        <div class="form-group mt-3">
            <button type="submit" class="btn btn-success">Save</button>
            <a href="@Url.Action("Index", "Configurations")" class="btn btn-secondary ms-2">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
