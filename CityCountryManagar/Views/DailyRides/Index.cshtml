@using RidersApp.ViewModels
@{
    ViewData["Title"] = "Daily Rides";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <h4 class="mb-0">Daily Rides</h4>
        <div>
            <button class="btn btn-success" onclick="showInPopup('@Url.Action("AddOrEdit", "DailyRides")', 'Add Daily Ride')">Add New</button>
        </div>
    </div>
    <div id="view-all">
        <table id="dailyRidesTable" class="table table-striped table-hover datatable">
            <thead>
                <tr>
                    <th>Employee</th>
                    <th>Entry Date</th>
                    <th>Credit Amount</th>
                    <th>Credit WAT</th>
                    <th>Cash Amount</th>
                    <th>Cash WAT</th>
                    <th>Expense</th>
                    <th>Today Rides</th>
                    <th>Total Rides</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

@* Add anti-forgery token for AJAX requests *@
@Html.AntiForgeryToken()

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize DataTable with server-side processing
            $('#dailyRidesTable').DataTable({
                processing: true,
                serverSide: true,
                language: {
                    processing: "Please wait...",
                    search: "Search:",
                    paginate: { previous: "Previous", next: "Next" }
                },
                ajax: {
                    url: '@Url.Action("GetDailyRidesData", "DailyRides")',
                    type: 'POST'
                },
                columns: [
                    { data: 'employeeName' },
                    { data: 'entryDate', render: function(data){
                        if(!data) return '';
                        var d = new Date(data);
                        return d.toLocaleDateString();
                    } },
                    { data: 'creditAmount' },
                    { data: 'creditWAT' },
                    { data: 'cashAmount' },
                    { data: 'cashWAT' },
                    { data: 'expense' },
                    { data: 'todayRides' },
                    { data: 'totalRides' },
                    {
                        data: 'id',
                        orderable: false,
                        searchable: false,
                        render: function (data, type, row) {
                            return `
                                <a class=\"btn btn-primary btn-sm text-white\" onclick=\"showInPopup('@Url.Action("AddOrEdit", "DailyRides")?id=${data}', 'Edit Daily Ride')\">Edit</a>
                                <a class=\"btn btn-danger btn-sm\" onclick=\"deleteRecord('DailyRides', ${data})\">Delete</a>
                            `;
                        }
                    }
                ],
                paging: true,
                pageLength: 25,
                lengthChange: true,
                searching: true,
                ordering: true,
                info: true,
                autoWidth: false,
                order: []
            });
        });
    </script>
}
