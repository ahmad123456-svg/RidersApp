@using RidersApp.ViewModels
@{
    ViewData["Title"] = "Daily Rides";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <h4 class="mb-0">Daily Rides</h4>
        <div>
            <button class="btn btn-success" onclick="showInPopup('@Url.Action("AddOrEdit", "DailyRides")', 'Add Daily Ride')">Add New</button>
        </div>
    </div>
    <div id="view-all">
        @await Html.PartialAsync("_ViewAll", new List<DailyRidesVM>())
    </div>
</div>

@* Add anti-forgery token for AJAX requests *@
@Html.AntiForgeryToken()

@section Scripts {
    <script>
        $(document).ready(function() {
            // Load daily rides on page load
            $.get('@Url.Action("GetDailyRides", "DailyRides")', function(data) {
                $("#view-all").html(data);
            });
        });
    </script>
}
