@using RidersApp.ViewModels
@model DailyRidesVM

@{
    Layout = null;
}

<form asp-action="AddOrEdit" asp-controller="DailyRides" method="post" class="daily-ride-form" onsubmit="return ajaxFormSubmit(this);">

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="CreditAmount"></label>
                <input asp-for="CreditAmount" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="CreditAmount" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="CashAmount"></label>
                <input asp-for="CashAmount" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="CashAmount" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Expense"></label>
                <input asp-for="Expense" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Expense" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="EntryDate"></label>
                <input asp-for="EntryDate" class="form-control" type="datetime-local" value="@(Model.EntryDate.ToString("yyyy-MM-ddTHH:mm"))" />
                <span asp-validation-for="EntryDate" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="TodayRides"></label>
                <input asp-for="TodayRides" class="form-control" type="number" />
                <span asp-validation-for="TodayRides" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="OverRides"></label>
                <input asp-for="OverRides" class="form-control" type="number" />
                <span asp-validation-for="OverRides" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="OverRidesAmount"></label>
                <input asp-for="OverRidesAmount" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="OverRidesAmount" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="TotalRides"></label>
                <input asp-for="TotalRides" class="form-control" type="number" />
                <span asp-validation-for="TotalRides" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="LessAmount"></label>
                <input asp-for="LessAmount" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="LessAmount" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="EmployeeId"></label>
                <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.Employees">
                    <option value="">-- Select Employee --</option>
                </select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
        </div>
    </div>

    <input type="hidden" asp-for="Id" />
    <div class="form-group mt-3 text-end">
        <button type="submit" class="btn btn-success">
            <i class="fas fa-save"></i> Save
        </button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
