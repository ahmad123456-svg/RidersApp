@using RidersApp.ViewModels
@model IEnumerable<DailyRidesVM>

<table id="dailyRidesTable" class="table table-dark table-striped table-hover datatable">
    <thead>
        <tr>
            <th>Employee</th>
            <th>Entry Date</th>
            <th>Credit Amount</th>
            <th>Credit WAT</th>
            <th>Cash Amount</th>
            <th>Cash WAT</th>
            <th>Expense</th>
            <th>Today Rides</th>
            <th>Total Rides</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EmployeeName</td>
                <td>@item.EntryDate.ToString("dd/MM/yyyy")</td>
                <td>@item.CreditAmount.ToString("C")</td>
                <td>@item.CreditWAT.ToString("C")</td>
                <td>@item.CashAmount.ToString("C")</td>
                <td>@item.CashWAT.ToString("C")</td>
                <td>@item.Expense.ToString("C")</td>
                <td>@item.TodayRides</td>
                <td>@item.TotalRides</td>
                <td>
                    <div class="btn-action-container">
                        <a onclick="showInPopup('@Url.Action("AddOrEdit", "DailyRides", new { id = item.Id })', 'Edit Daily Ride')" 
                           class="btn-action-edit" title="Edit Daily Ride">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a onclick="deleteRecord('DailyRides', @item.Id)" 
                           class="btn-action-delete" title="Delete Daily Ride">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
